<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
	>
		<LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
		>
			<TextView
				android:id="@+id/tv_district"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/tv_search_category"
				android:padding="5dip"
				android:text="@string/tv_district"
				android:textSize="18sp"
				android:textStyle="bold" 
				android:textColor="@color/text_search_category"
			/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="5dip" 
			>
				<Spinner
					android:id="@+id/sp_area"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
				/>
				<Spinner
					android:id="@+id/sp_district"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
				/>
			</LinearLayout>
			<TextView
				android:id="@+id/tv_type"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/tv_search_category"
				android:padding="5dip"
				android:text="@string/tv_type"
				android:textSize="18sp"
				android:textStyle="bold" 
				android:textColor="@color/text_search_category"
			/>
			<TableLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:padding="5dip" 
			>
				<TableRow
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
				>
					<CheckBox
						android:id="@+id/cb_type_public"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_type_public" 
					/>
					<CheckBox
						android:id="@+id/cb_type_corporate"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_type_corporate" 
					/>
				</TableRow>
				<TableRow
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
				>
					<CheckBox
						android:id="@+id/cb_type_private"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_type_private" 
					/>
					<CheckBox
						android:id="@+id/cb_type_home"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_type_home" 
					/>
				</TableRow>
				<TableRow
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
				>
					<CheckBox
						android:id="@+id/cb_type_parent"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_type_parent" 
					/>
					<CheckBox
						android:id="@+id/cb_type_job"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_type_job" 
					/>
				</TableRow>
			</TableLayout>
			<TextView
				android:id="@+id/tv_spec"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/tv_search_category"
				android:padding="5dip"
				android:text="@string/tv_spec"
				android:textSize="18sp"
				android:textStyle="bold" 
				android:textColor="@color/text_search_category"
			/>
			<TableLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:padding="5dip" 
			>
				<TableRow
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
				>
					<CheckBox
						android:id="@+id/cb_spec_seoul"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_spec_seoul" 
					/>
					<CheckBox
						android:id="@+id/cb_spec_disable_total"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_spec_disable_total" 
					/>
				</TableRow>
				<TableRow
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
				>
					<CheckBox
						android:id="@+id/cb_spec_disable_full"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_spec_disable_full" 
					/>
					<CheckBox
						android:id="@+id/cb_spec_multi_cul"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_spec_multi_cul" 
					/>
				</TableRow>
				<TableRow
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
				>
					<CheckBox
						android:id="@+id/cb_spec_baby"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_spec_baby" 
					/>
					<CheckBox
						android:id="@+id/cb_spec_time"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_spec_time" 
					/>
				</TableRow>
				<TableRow
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
				>
					<CheckBox
						android:id="@+id/cb_spec_time_as"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_spec_time_as" 
					/>
				</TableRow>
			</TableLayout>
			<TextView
				android:id="@+id/tv_etc"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/tv_etc"
				android:textSize="18sp"
				android:textStyle="bold" 
				android:background="@color/tv_search_category"
				android:padding="5dip"
				android:textColor="@color/text_search_category"
			/>
			<TableLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:padding="5dip"
			>
				<TableRow
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
				>
					<CheckBox
						android:id="@+id/cb_etc_certification"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_etc_certification" 
					/>
					<CheckBox
						android:id="@+id/cb_etc_vehicle"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/cb_etc_vehicle" 
					/>
				</TableRow>
			</TableLayout>
			<Button
				android:id="@+id/btn_send"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/btn_send" 
			/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
